<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/option_add_background">

    <include layout="@layout/option_add_minimized"
        android:id="@+id/option_add_minimized"
        android:layout_height="60dp"
        android:layout_width="match_parent" />

    <LinearLayout
        android:id="@+id/content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/numbers"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViews"
            android:text="0%"
            tools:text="50%"/>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:max="100"
            android:min="0"
            android:progress="0"
            android:thumbTint="@color/fill_color_main"
            android:progressTint="@color/fill_color_main"
            android:progressBackgroundTint="@color/fill_color_main"
            android:paddingBottom="10dp"/>

    </LinearLayout>

</LinearLayout>